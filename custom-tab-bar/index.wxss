.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  display: flex;
}

.tab-bar-border {
  background-color: #f5f5f5;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1rpx;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item cover-image {
  margin-top: 10rpx;
  height: 40rpx;
  width: 40rpx;
}
.tab-bar-item:nth-child(2n-1) cover-image{
  margin-top: 0;
  height: auto;
  width: 100rpx;
}

.tab-bar-item cover-view {
  margin-top: 5px;
  font-size: 20rpx;
}
