<!--components/activityList/activityList.wxml-->
<view class="wrapper">
  <view class="top">
    <view class="flex-bt">
      <text class="title">{{data.title}}</text>
      <view class="flex-bt message">
        <text>{{data.status}}</text>
        <text>{{data.message}}</text>
      </view>
    </view>
    <view class="flex-bt top-center">
      <view class="flex-bt local">
        <text>{{data.time}}</text>
        <text>{{data.local}}</text>
      </view>
      <view class="button seeData" bindtap="goJoin" wx:if="{{ type=='1'}}">查看详情</view>
      <view class="button seeData" bindtap="goJoin" wx:if="{{ type=='2'}}">我要参与</view>
      <view class="button seeData" bindtap="goJoin" wx:if="{{ type=='3'}}">我要发布</view>
    </view>
    <view class="flex-bt">
      <view class="flex-bt label">
        <text wx:for="{{data.label}}" wx:key="key">{{item}}</text>
      </view>
      <view wx:if="{{type ==='1'}}" class="button sign">
        <view class="flex">
          <image src="/assets/images/home/qiandao.png"></image>
          <text>签到</text>
        </view>
      </view>
      <view wx:if="{{type ==='4'}}" class="button hexiao">
        <view class="flex" bindtap="scanCodeHandle" >
          <image src="/assets/images/home/hexiao.png"></image>
          <text>核销</text>
        </view>
      </view>
    </view>
  </view>
  <view class="bottom flex-bt" wx:if="{{ type !== '3' }}" >
  <!-- 头像 列表 -->
    <view class="people">
      <image>  </image>
    </view>

    <view wx:if="{{type ==='1'}}" class="button hexiao">
      <view class="flex">
        <image src="/assets/images/home/hexiao.png"></image>
        <text>核销</text>
      </view>
    </view>

  </view>

</view>