  border-top: solid 20rpx #f1f1f1;
  padding: 0 30rpx;
  padding-bottom: 200rpx;
  padding-top: 10rpx;
}
.activityDetils .title{
  color: #151515;
  font-weight: bold;
  padding: 30rpx 0;
  font-size: 32rpx;
}
.activityDetils .title image{
  width: 29rpx;
  height: 29rpx;
  vertical-align: middle;
}
.activityDetils .title text{
  font-size: 28rpx;
  color: #5d5d5d;
}
.activityDetils .time text{
  color: #4ce293;
  font-size: 26rpx;
  border:solid 1rpx #4ce293;
  padding: 14rpx 56rpx;
  background: #f0fff7;
}
.activityDetils  .people{
  width: 100%;
  display: flex;
}
.activityDetils  .people .left{
    width:165rpx;
    float: left;
}
.activityDetils  .people .left text{
     padding:15rpx 60rpx;
    border:solid 1rpx #f1f1f1;
    display: inline-block;
    text-align: center;
    font-size: 26rpx;
}
.activityDetils  .people .right{
   flex:1;
}
.activityDetils  .people .right text{
    padding:15rpx 60rpx;
    border:solid 1rpx #f1f1f1;
    display: inline-block;
    text-align: center;
    font-size: 26rpx;
    margin-right: 33rpx;
    margin-bottom: 33rpx;
}
.activityDetils  .people .right text.active{
  color: #40e59b;
  border: solid 1px #40e59b;
  background: #f0fff7;
}

.activityDetils .tips{
  color: #adadad;
  font-size: 22rpx;
}
.footer{
  background: #f9f9f9;
  height: 114rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.footer view.money{
  flex: 1;
  color: #222;
  font-size: 22rpx;
}
.footer view.money>text:first-child{
  color: #f85b92;
  font-size: 28rpx;
  display: block;
}
.footer .btn image{
  width: 376rpx;
  height: 114rpx;
}
.footer .btn{
  position: relative;
  display: inline-block;
  margin: 0;
  padding: 0;
  border: none;
  line-height: 50rpx;
}
.footer .btn:after{
  border:none;
}
.footer .btn text{
  display: block;
  position: absolute;
  top:34rpx;
  left: 135rpx;
  width: 376prx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  
}




