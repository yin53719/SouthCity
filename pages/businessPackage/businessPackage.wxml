<!--pages/businessPackage/businessPackage.wxml-->


<view class="wrapper">
  <text class="title">套餐设置</text>
  <view class="form">
    <input placeholder="请输入标题"></input>
    <view class="th flex-bt">
      <text>人数</text>
      <text class="ipt">套餐提供</text>
    </view>
    <view class="td flex-bt" wx:for="{{ packages }}" wx:key="idx" wx:for-item="item" >
      <text>{{ item.num }}男{{ item.num }}女</text>
      <input class="ipt" placeholder="套餐内容" value="{{ item.text }}"></input>
    </view>
    <view class="checkImg flex" bindtap="uploadCard" >
      <image src="{{ cardUrl }}"></image>
      <text>更换</text>
    </view>

  </view>
   <view bindtap="gotolink" class="save">
    <text>保存修改</text>
  </view>



</view>