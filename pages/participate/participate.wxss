.container{
  /* padding:0 30rpx; */
  font-size: 28rpx;
  height: 100%;
}
.topBar{
  height: 56rpx;
  line-height: 56rpx;
 display: flex;
 padding-left: 30rpx;
  padding-right: 30rpx;
}
.topBar .location{
  display: inline-block;
  float: left;
  margin-right: 30rpx;
  
}
.topBar .location image{
   width: 22rpx;
   height: 29rpx;
   margin-right: 10rpx;
   vertical-align: -1rpx;
}
.topBar .search{
  height: 56rpx;
  margin-left: 10rpx;
  background: #f7f7f7;
  border-radius: 28rpx;
  display: flex;
  flex: 1;
}
.topBar .search image{
  margin-left: 20rpx;
  width:22rpx;
  height: 27rpx;
  margin-top: 15rpx;
}
.topBar .search input{
  display: inline-block;
 flex: 1;
 padding-left: 16rpx;
}
.topBar .nice{
  display: inline-block;
  float: right;
  margin-left: 30rpx;
}
.topBar .nice image{
  width:48rpx;
  height: 47rpx;
}
.banner{
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.content{
  padding: 30rpx 0;
  background: var(--backColor);
  margin-bottom: 80rpx;
}