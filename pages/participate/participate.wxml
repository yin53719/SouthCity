<view class="container">
  <!-- 头部 -->
  <view class="topBar">
    <view class="location">
        <image src="../../assets/images/location.png"></image>
        <text>{{ location }}</text>
    </view>
    
    <view class="search">
      <image  src="../../assets/images/search.png"></image>
      <input confirm-type="search" placeholder="搜索你喜欢的聚会活动"></input>
    </view>
    <view class="nice">
        <image src="../../assets/images/nice.png"></image>
    </view>
  </view>
  <!-- banner -->
  <view class="banner">
     <image style="width:690rpx;height:196rpx;margin-top:20rpx;" src="../../assets/images/banner.jpg"></image>
  </view>
  <!-- 导航 -->
  <view class="navBar">
     <view    wx:for="{{navArray}}" wx:key="idx" wx:for-item="itemName" >
        <text bindtap="navTap" data-type="{{ itemName.type }}" class="{{itemName.type == navType ? 'active':'' }}" >{{itemName.name}}</text>      
  <text  class="line {{itemName.type == navType ? 'active':'' }}" ></text>
        
     </view>
  </view>
  <!-- 导航2  -->
  <view class="navStatus">
      <view>
        <text>热门聚会</text>
        <image class="rotate180" src="../../assets/images/arrow.png" ></image>
      </view>
      <view>
        <text>距离最近</text>
        <image src="../../assets/images/arrow.png" ></image>
      </view>
      <view>
        <text>价格最低</text>
        <image src="../../assets/images/arrow.png" ></image>
      </view>
       <view>
        <text>综合排序</text>
        <image src="../../assets/images/arrow.png" ></image>
      </view>
  </view>
  <!-- 活动列表-->
  <view class="content">
    <activity-cell type="2" wx:for="{{activityList}}" wx:key="key" data="{{item}}"></activity-cell>
  </view>
</view>